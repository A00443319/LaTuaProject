@model LaTuaPizza.Models.CardDetails

@{ ViewData["Title"] = "Create"; }

<h1>Create</h1>

<h4>CardDetails</h4>

<hr />
  
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CardNo" class="control-label"></label>
                <input asp-for="CardNo" class="form-control" />
                <span asp-validation-for="CardNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CardName" class="control-label"></label>
                <input asp-for="CardName" class="form-control" />
                <span asp-validation-for="CardName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Phone" value="@ViewBag.userPhone" type="hidden" class="form-control" />
            </div>
            @*<div class="form-group">
                <label asp-for="Expiry" class="control-label"></label>
                <input asp-for="Expiry" class="form-control" />
                @Html.DisplayFor(modelItem => modelItem.Expiry, "{0:dd/MM/yyyy}")
                <span asp-validation-for="Expiry" class="text-danger"></span>
            </div>*@
            <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(model => model.CardType, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.RadioButtonFor(model => model.CardType, "MasterCard") Master Card
                @Html.RadioButtonFor(model => model.CardType, "Visa") Visa
                @Html.RadioButtonFor(model => model.CardType, "American Express") American Express
            </div>
        </div>


        <div class="form-group">
            <label asp-for="Expiry" class="control-label"></label>
            @Html.DisplayFor(modelItem => modelItem.Expiry, "{0:dd/MM/yyyy}")
            <span class="expiration" style=" border: 1px solid #bbbbbb;">
                <input type="text" name="month" placeholder="MM" maxlength="2" size="2" style="margin-bottom: 5px; margin-left:5px;" />
                <span>/</span>
                <input type="text" name="year" placeholder="YY" maxlength="2" size="2" style="margin-bottom: 5px; margin-left:5px;" />
            </span>
            <span asp-validation-for="Expiry" class="text-danger"></span>
        </div>
            

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


@model LaTuaPizza.Models.CardDetails


@{ ViewData["Title"] = "Index"; }

<h2>Payment Details: </h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Validate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CardNo" class="control-label"></label>
                <input asp-for="CardNo" class="form-control" />
                <span asp-validation-for="CardNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CardName" class="control-label"></label>
                <input asp-for="CardName" class="form-control" />
                <span asp-validation-for="CardName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Phone" value="@ViewBag.userPhone" type="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Expiry" class="control-label"></label>
                
                <input id ="i3" asp-for="Expiry" type="hidden" class="form-control" />
                <span class="expiration" style=" border: 1px solid #bbbbbb;">
                    <input type="text" id="i1" name="month" placeholder="MM " maxlength="2" size="2" style="margin-bottom: 5px; margin-left:5px;" />
                    <span>/</span>
                    <input type="text" id="i2" name="year" placeholder="YY" maxlength="2" size="2" style="margin-bottom: 5px; margin-left:5px;" />
                </span>
                <span asp-validation-for="Expiry" class="text-danger"></span>
            </div>





            @Html.LabelFor(model => model.CardType, htmlAttributes: new { @class = "control-label" })
            <div class="form-group">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" asp-for="CardType" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="Master Card">
                    <label class="form-check-label" for="inlineRadio1">Master Card</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" asp-for="CardType" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="Visa">
                    <label class="form-check-label" for="inlineRadio2">Visa</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" asp-for="CardType" type="radio" name="inlineRadioOptions" id="inlineRadio3" value="American Express">
                    <label class="form-check-label" for="inlineRadio3">American Express</label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Pay" class="btn btn-primary" />
            </div>
        </form>
</div>
</div>
<script>


    $('#i1').on('change', () => $('#i3')[0].value = $('#i1')[0].value)
    $('#i2').on('change', () => $('#i3')[0].value += $('#i2')[0].value)







</script>